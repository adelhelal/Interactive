        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interactive"
        mc:Ignorable="d"
        Topmost="True"
        Title="Interactive"
        Height="440" Width="300" MinHeight="440" MinWidth="300" Left="1140" Top="430">
